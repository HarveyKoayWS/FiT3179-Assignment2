{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Vehicle Registrations per 1,000 People by State (Malaysia, 2025)",
    "fontSize": 26,
    "font": "Arial",
    "fontWeight": "bold",
    "color": "black",
    "anchor": "middle"
  },
  "width": "container",
  "height": "container",
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "projection": {
    "type": "mercator",
    "center": [109.5, 4],  
    "scale": 2400      
  },
  "layer": [
    {
      "data": {
        "url": "ne_10m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "color": {
          "field": "registrations_per_1000",
          "type": "quantitative",
          "scale": {
            "domain": [0, 3.5],
            "scheme": "blues",
            "clamp": true
          },
          "legend": {
            "title": "Registrations\nper 1k",
            "orient": "right",
            "titleFontSize": 16,
            "labelFontSize": 12
          }
        },
        "tooltip": [
          {
            "field": "properties.name",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "total_count",
            "type": "quantitative",
            "title": "Total Registrations"
          },
          {
            "field": "population",
            "type": "quantitative",
            "title": "Population"
          },
          {
            "field": "registrations_per_1000",
            "type": "quantitative",
            "title": "Registrations per 1,000"
          }
        ]
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/HarveyKoayWS/FiT3179-Homework9/main/state_counts_normalized.csv"
            },
            "key": "state",
            "fields": [
              "total_count",
              "population",
              "registrations_per_1000"
            ]
          }
        }
      ]
    },
    {
    "data": {
      "url": "ne_10m.json",
      "format": {
        "type": "topojson",
        "feature": "ne_10m_graticules_5"
      }
    },
    "mark": {"type": "geoshape", "stroke": "lightgray", "strokeWidth": 0.5}
  }
  ]
}
